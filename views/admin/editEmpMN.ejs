<script>
const form = document.querySelector('#your-form-id');  // Ensure this is the form you're working with
const errorMessageDiv = document.querySelector('#error-message');  // Div where errors will be displayed

form.addEventListener('submit', async function(event) {
    event.preventDefault();  // Prevent default form submission

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    try {
        // Send POST request to backend
        const response = await fetch(form.action, {
            method: 'POST',
            body: new URLSearchParams(data)
        });

        const result = await response.json();

        // Check if the response is ok
        if (!response.ok || result.success === false) {
            // Display the error message
            errorMessageDiv.textContent = result.message || 'An error occurred';
            errorMessageDiv.style.color = 'red';  // Make the message red for errors
            return;  // Stop further execution
        }

        // If successful, display a success message
        errorMessageDiv.textContent = result.message || 'Employee updated successfully!';
        errorMessageDiv.style.color = 'green';  // Success message in green
        window.location.href = '/admin/notif';  // Redirect after successful update
    } catch (error) {
        console.error('Error:', error);
        errorMessageDiv.textContent = 'An error occurred while saving the data.';
    }
});
</script>

